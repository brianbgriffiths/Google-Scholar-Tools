{
  "manifest_version": 3,

  "name": "Google Scholar Tools",
  "description": "This extension provides some additional bookmarking and sorting of google scholar results.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
	"tabs"
  ],
  "host_permissions": [
	"*://scholar.google.com/*"
  ],
  "content_scripts": [
   {
     "matches": ["*://scholar.google.com/*"],
     "js": ["pageTools.js"],
	 "css": ["pageTools.css"]
   }
 ]
}
